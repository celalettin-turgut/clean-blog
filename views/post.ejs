<!DOCTYPE html>
<html lang="en">
  <head>
    <%- include('particials/_head.ejs') %>
  </head>

  <body>
    <!-- Navigation -->
    <%- include('particials/_navbar.ejs') %>

    <!-- Page Header -->
    <header class="masthead" style="background-image: url('img/post-bg.jpg')">
      <div class="overlay"></div>
      <div class="container">
        <div class="row">
          <div class="col-lg-8 col-md-10 mx-auto">
            <div class="post-heading">
              <h1><%= post.title %></h1>

              <span class="meta"
                >Posted by
                <a href="#">Start Bootstrap</a>
                <%= post.dateCreated %>
              </span>
            </div>
          </div>
        </div>
      </div>
    </header>

    <!-- Post Content -->
    <article>
      <div class="container">
        <div class="row">
          <div class="col-lg-8 col-md-10 mx-auto"><%= post.detail %></div>
        </div>
      </div>
    </article>

    <hr />

    <!-- Footer -->
    <%- include('particials/_footer.ejs') %>

    <!-- Bootstrap core JavaScript -->
    <script src="vendor/jquery/jquery.min.js"></script>
    <script src="vendor/bootstrap/js/bootstrap.bundle.min.js"></script>

    <!-- Custom scripts for this template -->
    <script src="js/clean-blog.min.js"></script>
  </body>
</html>
